{
  "name": "backend-firebase-auth",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "type": "commonjs",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run db:generate:safe && tsc && cpx \"src/public/**/*\" dist/public",
    "build:dev": "npm run db:generate && tsc && cpx \"src/public/**/*\" dist/public",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "seed-script": "tsx prisma/seed.ts",
    "seed": "npm run seed-script",
    "migrate:dev": "npx prisma migrate dev --schema ./prisma",
    "migrate:prod": "npx prisma migrate deploy --schema ./prisma",
    "prisma:generate": "npm run db:generate:safe",
    "db:generate": "npx prisma generate --schema ./prisma",
    "db:generate:safe": "npm run db:kill-processes && npx prisma generate --schema ./prisma",
    "db:kill-processes": "taskkill /f /im node.exe 2>nul || true",
    "db:push": "npx prisma db push --schema ./prisma",
    "db:pull": "npx prisma db pull --schema ./prisma",
    "db:reset": "npx prisma migrate reset --schema ./prisma",
    "db:studio": "npx prisma studio --schema ./prisma",
    "db:setup": "npm run db:generate:safe && npm run migrate:prod",
    "db:dev": "npm run db:generate:safe && npm run migrate:dev"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/nodemailer": "^7.0.2",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "lodash.isequal": "^4.5.0",
    "lru-cache": "^11.1.0",
    "mercadopago": "^2.9.0",
    "nodemailer": "^7.0.9",
    "reflect-metadata": "^0.2.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/lodash.isequal": "^4.5.8",
    "@types/node": "^20.19.9",
    "cpx": "^1.5.0",
    "cross-env": "^10.0.0",
    "prisma": "^6.13.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
