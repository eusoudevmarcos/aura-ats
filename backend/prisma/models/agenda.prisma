model Agenda {
    id                String              @id @default(uuid())
    titulo            String              @default("Titulo")
    dataHora          DateTime
    link              String?
    tipoEvento        TipoEventoAgenda    @default(TRIAGEM_INICIAL)
    localEvento       LocalEvento         @default(REMOTO)
    agendaCandidatura AgendaCandidatura[]
    convidados        String[]

    etapaAtual   ProcessoSeletivoEtapa? @relation(fields: [etapaAtualId], references: [id], onDelete: Cascade)
    etapaAtualId String?

    localizacao   Localizacao? @relation(fields: [localizacaoId], references: [id])
    localizacaoId String?

    vaga   Vaga?   @relation(fields: [vagaId], references: [id])
    vagaId String?

    cliente   Cliente? @relation(fields: [clienteId], references: [id])
    clienteId String?

    triagem   TriagemVaga? @relation(fields: [triagemId], references: [id])
    triagemId String?

    usuarioSistema   UsuarioSistema @relation(fields: [usuarioSistemaId], references: [id])
    usuarioSistemaId String

    @@index([etapaAtualId])
    @@index([localizacaoId])
    @@index([vagaId])
    @@index([clienteId])
    @@index([triagemId])
    @@index([usuarioSistemaId])
    @@schema("Agenda")
}

model ProcessoSeletivoEtapa {
    id           String            @id @default(uuid(7))
    nome         String
    tipo         TipoEtapa
    ordem        Int
    descricao    String?
    ativa        Boolean           @default(true)
    agendaVaga   Agenda[]
    candidaturas CandidaturaVaga[]

    @@schema("ProcessoSeletivoEtapa")
}

